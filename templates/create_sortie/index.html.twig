{% extends 'base.html.twig' %}

{% block title %}Hello CreateSortieController!{% endblock %}

{% block body %}
    {{ form_start(formSortie) }}
    <div class="container">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.nom, {'attr':{'placeholder':'nom','class':'form-control'}}) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.campus, {'attr':{'placeholder':'campus','class':'form-control'}}) }}
            </div>
            <div class="col-md-4 mb-3 input-group date" data-provide="datepicker">
                {{ form_row(formSortie.dateHeureDebut, {'attr':{'placeholder':'dateHeureDebut','class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.duree, {'attr':{'placeholder':'duree','class':'form-control'}}) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.nbInscriptionsMax, {'attr':{'placeholder':'nbInscriptionsMax','class':'form-control'}}) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.dateLimite, {'attr':{'placeholder':'dateLimite','class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.description, {'attr':{'placeholder':'description','class':'form-control'}}) }}
            </div>
{#            <div class="col-md-4 mb-3">#}
{#                {{ form_row(formSortie.etat, {'attr':{'placeholder':'etat','class':'form-control'}}) }}#}
{#            </div>#}
            <div class="col-md-4 mb-3">
                {{ form_row(formSortie.lieu, {'attr':{'placeholder':'lieu','class':'form-control'}}) }}
            </div>
        </div>
         <button class="btn btn-success" type="submit">Enregistrer</button>
         <button class="btn btn-primary" type="submit">Publier la sortie</button>
         <button class="btn btn-danger" type="submit">Annuler</button>
    </div>
    {{ form_end(formSortie) }}
{% endblock %}
