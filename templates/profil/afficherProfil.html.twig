{% extends 'base.html.twig' %}

{% block title %}Profil | Sortir.com{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/afficherProfile.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row" id="row">
          <!--  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" > -->
                <div class="panel panel-info">
                    <div class="panel-heading bg-dark text-white border-light">
                        <h3 class="panel-title">{{ user.pseudo }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            {% if user.imageName %}
                                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="{{ asset('uploads/'~ user.imageName) }}" class="img-circle img-responsive"> </div>
                            {% else %}
                                <img class="col-md-3 col-lg-3 " src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="img-circle img-responsive">
                            {% endif %}
                            <div class=" col-md-9 col-lg-9 ">
                                <table class="table table-user-information">
                                    <tbody>
                                    <tr>
                                        <td>Prenom:</td>
                                        <td>{{ user.prenom }}</td>
                                    </tr>
                                    <tr>
                                        <td>Nom:</td>
                                        <td>{{ user.nom }}</td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <td>Email</td>
                                        <td><a href="mailto:info@support.com">{{user.mail}}</a></td>
                                    </tr>
                                    <td>Phone Number</td>
                                    <td>{{ user.phone }}<br>
                                    </td>
                                    <tr>
                                        <td>Campus</td>
                                        <td>{{ user.campus }}</td>
                                    </tr>
                                    </tr>
                                    </tbody>
                                </table>
                                <div class="back" align="justify">
                                    <a href="{{ path('profil', {'id': app.user.id}) }}" class="btn btn-primary" align="center">Retour</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
        <!--    </div> -->
        </div>
    </div>
{% endblock %}