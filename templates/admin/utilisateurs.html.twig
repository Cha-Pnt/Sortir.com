{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs | Sortir.com{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <!--  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" > -->
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des utilisateurs</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://i.redd.it/ajdo2kqr4c421.jpg" class="img-circle img-responsive"> </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <thead>
                                <th>ID</th>
                                <th>Pseudo</th>
                                <th>Email</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Telephone</th>
                                <th>Actif</th>
                                <th>Roles</th>
                                <th>Actions</th>
                                </thead>
                                <tbody>
                                {% for utilisateur in utilisateurs %}
                                <tr>
                                    <td>{{ utilisateur.id }}</td>
                                    <td>{{ utilisateur.pseudo }}</td>
                                    <td>{{ utilisateur.mail }}</td>
                                    <td>{{ utilisateur.nom }}</td>
                                    <td>{{ utilisateur.prenom }}</td>
                                    <td>{{ utilisateur.phone }}</td>
                                    <td>{{ utilisateur.actif }}</td>
                                    <td>
                                        {% if utilisateur.roles[0] == "ROLE_ADMIN"  %}
                                            Administrateur
                                            {% else %}
                                            Participant
                                        {% endif %}
                                    </td>
                                    <td><a href="{{ path('adminmodifier_utilisateur',{'id': utilisateur.id}) }}" class="btn btn-warning">Modifier</a></td>
                                </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Il n'y a pas d'utilisateur inscrit</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path("accueil") }}" class="btn btn-primary">Retour</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}