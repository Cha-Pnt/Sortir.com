{% extends 'base.html.twig' %}

{% block title %}Hello GererVillesController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des villes</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://world.edu/wp-content/uploads/2016/09/safe-spaces-colleges.jpg" class="img-circle img-responsive"> </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table" id="editableTable">
                                <thead>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Actions</th>
                                </thead>
                                <tbody>
                                {% for camp in campus %}
                                    <tr>
                                        <td>{{ camp.id }}</td>
                                        <td>{{ camp.nom }}</td>
                                        <td><a href="{{ path('adminmodify_campus',{'id': camp.id}) }}" class="btn btn-warning">Modifier</a></td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Pas de campus dans DATABASE</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path("adminajouter_campus") }}" class="btn btn-primary">Ajouter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


